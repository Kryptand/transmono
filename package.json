{
  "name": "@kryptand/transmono",
  "version": "0.0.5",
  "description": "A web component based translation library built with StencilJs. Use it whenever and wherever you like to.",
  "homepage": "https://github.com/kryptand/transmono#readme",
  "url": "https://github.com/kryptand/transmono/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/kryptand/transmono"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/transmono/transmono.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e --coverage",
    "test.watch": "stencil test --spec --e2e --coverage --watchAll",
    "generate": "stencil generate",
    "commit": "git add -A && cz",
    "lint": "eslint src/**/*{.ts,.tsx}",
    "release": "standard-version",
    "lint-and-fix": "eslint src/**/*{.ts,.tsx} --fix"
  },
  "dependencies": {
    "@stencil/core": "^2.0.1"
  },
  "license": "MIT",
  "devDependencies": {
    "@stencil/eslint-plugin": "^0.3.1",
    "@types/jest": "^26.0.12",
    "@types/puppeteer": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "jest": "^26.4.2",
    "jest-cli": "^26.4.2",
    "prettier": "^2.1.2",
    "puppeteer": "^5.2.1",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
